DROP DATABASE IF EXISTS bamazonDB;
CREATE DATABASE bamazonDB;

USE bamazonDB;
DROP TABLE products;


CREATE TABLE products(
  id INT NOT NULL AUTO_INCREMENT,
  product_name VARCHAR(45) NULL,
  department VARCHAR(45) NULL,
  price INTEGER,
  quantity INTEGER,
  PRIMARY KEY (id)
);


